@model IEnumerable<Domain.Model.Model>
@{
    ViewBag.Title = "List";
}
<h2>
    List</h2>
@using (Html.BeginForm("Create", "Model", FormMethod.Post))
{ 
    <fieldset>
        <legend>Location</legend>
        <div class="editor-label">
            @Html.Label("Manufacturer")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Id_Manufacturer", new SelectList(ViewBag.Manufacturers, "Id", "Name"), "Please select")
        </div>
        <div class="editor-label">
            @Html.Label("Name")
        </div>
        <div class="editor-field">
            @Html.Editor("Name")
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Manufacturer
        </th>
        <th>
            Created_by
        </th>
        <th>
            Created_on
        </th>
        <th>
            Modified_by
        </th>
        <th>
            Modified_on
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        using (Html.BeginForm("Update", "Model", FormMethod.Post))
        {
        <tr>
            <td>
                @Html.HiddenFor(modelItem => item.Id, new { Name = "Id" })
                @Html.EditorFor(modelItem => item.Name)
                @Html.ValidationMessageFor(modelItem => item.Name)
            </td>
            <td>              
                @Html.DropDownListFor(modelItem => item.Id_Manufacturer, new SelectList(ViewBag.Manufacturers, "Id", "Name"), "Please select")
                @Html.ValidationMessageFor(modelItem => item.Id_Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_by)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_on)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modified_by)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modified_on)
            </td>
            <td>
                <input type="submit" value="Save" />
            </td>
        </tr>
        }
    }
</table>
