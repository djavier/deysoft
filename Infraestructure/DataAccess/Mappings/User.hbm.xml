<?xml version="1.0" encoding="utf-8" ?>
   <hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                                       namespace="Domain.Model"
                                       assembly="Domain">
    
     <class name="User" table="TB_USER" dynamic-update="true">
       <cache usage="read-write"/>
       <id name="Id" column="Id" type="Guid">
         <generator class="guid"/>
       </id>
       <property name="Username" length="20"/>
       <property name="Name" length="50"/>
       <property name="Lastname" length="50"/>
       <property name="Email" length="50"/>
       <property name="Password" />
       <property name="PasswordQuestion" length="50"/>
       <property name="PasswordAnswer" length="50"/>
       <property name="LastLoginDate" />
       <property name="LastPasswordChangeDate"/>
       <property name="CreationDate" />
       <property name="IsOnLine" />
       <property name="IsLockedOut"/>
       <property name="PasswordAttemptsCount"/>
       <property name="PasswordAnswerAttemptsCount"/>
     </class>
   </hibernate-mapping>

