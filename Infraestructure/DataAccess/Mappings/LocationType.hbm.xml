<?xml version="1.0" encoding="utf-8" ?>
   <hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                                       namespace="Domain.Model"
                                       assembly="Domain">
    
     <class name="LocationType" table="TB_LOCATION_TYPE" dynamic-update="true">
       <cache usage="read-write"/>
       <id name="ID" column="ID" type="int">
       </id>
       <property name="Description" length="100"/>
       <property name="Created_by" length="50"/>
       <property name="Created_on" type="datetime"/>
       <property name="Modified_by" length="50"/>
       <property name="Modified_on" type="datetime" />

     </class>
   </hibernate-mapping>

