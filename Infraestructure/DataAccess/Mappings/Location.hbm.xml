<?xml version="1.0" encoding="utf-8" ?>
   <hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                                       namespace="Domain.Model"
                                       assembly="Domain">
    
     <class name="Location" table="TB_LOCATION" dynamic-update="true">
       <cache usage="read-write"/>
       <id name="Id" column="Id" type="Guid">
         <generator class="guid"/>
       </id>
       <property name="Description" length="100"/>
       <property name="Created_by" length="50"/>
       <property name="Created_on" type="datetime"/>
       <property name="Modified_by" length="50"/>
       <property name="Modified_on" type="datetime" />
       <many-to-one name="LocationType" class="LocationType">
         <column name="ID_Location_Type" />
       </many-to-one>
       <many-to-one name="Father" class="Location" column="Father_ID" />

       <bag name="Childrens" inverse="true" cascade="all-delete-orphan">
         <key column="Father_ID"/>
         <one-to-many class="Location" />
       </bag>
       
       

     </class>
   </hibernate-mapping>

